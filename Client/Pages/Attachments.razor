@page "/attachments"

@attribute [Authorize]
<PageTitle>Attachments</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Attachments" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@attachments" LoadData="@Grid0LoadData" Count="@count" TItem="DOOH.Server.Models.DOOHDB.Attachment" RowDoubleClick="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Attachment" Property="AttachmentKey" Title="Attachment Key">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Attachment" Property="FileName" Title="File Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Attachment" Property="Thumbnail" Title="Thumbnail">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Attachment" Property="Size" Title="Size">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Attachment" Property="ContentType" Title="Content Type">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Attachment" Property="AspectRatio" Title="Aspect Ratio">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Attachment" Property="Duration" Title="Duration">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Attachment" Property="CodecName" Title="Codec Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Attachment" Property="Height" Title="Height">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Attachment" Property="Width" Title="Width">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Attachment" Property="BitRate" Title="Bit Rate">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Attachment" Property="FrameRate" Title="Frame Rate">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Attachment" Property="CreatedAt" Title="Created At">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Attachment" Property="UpdatedAt" Title="Updated At">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Attachment" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="attachment">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, attachment)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
