@layout PublicLayout
@page "/terms"


<PageTitle>Terms</PageTitle>
<RadzenStack>
    @if (policy != null && !isLoading)
    {
        @((MarkupString)policy.Content)
    }
    else if (isLoading)
    {
        <RadzenPanel>
            <RadzenText Text="Loading..." />
        </RadzenPanel>
    }
    else
    {
        <RadzenPanel>
            <RadzenText Text="No terms of use found." />
        </RadzenPanel>
    }
</RadzenStack>
