@layout PublicLayout
@page "/privacy"


<PageTitle>Privacy</PageTitle>
<RadzenStack>
    @if (policy != null && !isLoading)
    {
        @((MarkupString)policy.Content)
    }
    else if (isLoading)
    {
        <RadzenPanel>
            <RadzenText Text="Loading..." />
        </RadzenPanel>
    }
    else
    {
        <RadzenPanel>
            <RadzenText Text="No privacy policy found." />
        </RadzenPanel>
    }
</RadzenStack>
