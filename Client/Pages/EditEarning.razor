@page "/edit-earning"

@attribute [Authorize]
<PageTitle>Edit Earning</PageTitle>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Earning</RadzenAlert>
        <RadzenTemplateForm TItem="DOOH.Server.Models.DOOHDB.Earning" Data="@earning" Visible="@(earning != null)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Earning Id" Component="EarningId" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@earning.EarningId" Name="EarningId" />
                    <RadzenRequiredValidator Component="EarningId" Text="EarningId is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Provider" Component="Provider" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@providersForProviderId" TextProperty="ContactName" ValueProperty="ProviderId" AllowClear=true
                         Placeholder="Choose Provider" style="display: block; width: 100%" @bind-Value="@earning.ProviderId" Name="ProviderId"
                        SelectedValue=@providersForProviderIdValue Count=@providersForProviderIdCount LoadData=@providersForProviderIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Analytic" Component="Analytic" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@analyticsForAnalyticId" TextProperty="" ValueProperty="AnalyticId" AllowClear=true
                         Placeholder="Choose Analytic" style="display: block; width: 100%" @bind-Value="@earning.AnalyticId" Name="AnalyticId"
                        SelectedValue=@analyticsForAnalyticIdValue Count=@analyticsForAnalyticIdCount LoadData=@analyticsForAnalyticIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Adboard" Component="Adboard" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@adboardsForAdboardId" TextProperty="DisplaySerial" ValueProperty="AdboardId" AllowClear=true
                         Placeholder="Choose Adboard" style="display: block; width: 100%" @bind-Value="@earning.AdboardId" Name="AdboardId"
                        SelectedValue=@adboardsForAdboardIdValue Count=@adboardsForAdboardIdCount LoadData=@adboardsForAdboardIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Total Duration" Component="TotalDuration" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@earning.TotalDuration" Name="TotalDuration" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Rate Per Second" Component="RatePerSecond" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@earning.RatePerSecond" Name="RatePerSecond" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Total Amount Before Tax" Component="TotalAmountBeforeTax" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@earning.TotalAmountBeforeTax" Name="TotalAmountBeforeTax" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Earning Percent" Component="EarningPercent" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@earning.EarningPercent" Name="EarningPercent" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Earning Amount" Component="EarningAmount" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@earning.EarningAmount" Name="EarningAmount" />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

