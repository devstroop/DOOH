@layout ProviderLayout
@page "/provider/adboards"

@attribute [Authorize]

<PageTitle>Adboards</PageTitle>
<RadzenRow>
    <RadzenColumn Size="12">
        <RadzenText Text="Adboards" TextStyle="TextStyle.H3" TagName="TagName.H1" />
    </RadzenColumn>
</RadzenRow>
<RadzenDataList TItem="DOOH.Server.Models.DOOHDB.Adboard" Data="@adboards" AllowPaging="true" LoadData="@adboardsLoadData" Count="@adboardsCount">
    <Template>
        <RadzenStack Orientation="Orientation.Horizontal">
            <RadzenImage Path="@context.AttachmentKey" Width="100" Height="100" />
            <RadzenStack>
                @context.Address
            </RadzenStack>
        </RadzenStack>
    </Template>
</RadzenDataList>