@page "/analytics"

@attribute [Authorize]
<PageTitle>Analytics</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Analytics" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@analytics" LoadData="@Grid0LoadData" Count="@count" TItem="DOOH.Server.Models.DOOHDB.Analytic" RowDoubleClick="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Analytic" Property="AnalyticId" Title="Analytic Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Analytic" Property="Adboard.DisplaySerial" Title="Adboard">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Analytic" Property="Advertisement.UploadKey" Title="Advertisement">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Analytic" Property="StartedAt" Title="Started At">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Analytic" Property="StoppedAt" Title="Stopped At">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Analytic" Property="Duration" Title="Duration">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Analytic" Property="TotalAttention" Title="Total Attention">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Analytic" Property="UniqueAttention" Title="Unique Attention">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Analytic" Property="UpdatedAt" Title="Updated At">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Analytic" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="analytic">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, analytic)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
