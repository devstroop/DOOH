@attribute [Authorize]
<PageTitle>Edit Provider</PageTitle>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Provider</RadzenAlert>
        <RadzenTemplateForm TItem="DOOH.Server.Models.DOOHDB.Provider" Data="@provider" Visible="@(provider != null)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="4">
                    <RadzenLabel Text="Name" Component="ContactName" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="8">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@provider.ContactName" Name="ContactName" />
                    <RadzenRequiredValidator Component="ContactName" Text="ContactName is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="4">
                    <RadzenLabel Text="Company" Component="CompanyName" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="8">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@provider.CompanyName" Name="CompanyName" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="4">
                    <RadzenLabel Text="Email" Component="Email" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="8">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@provider.Email" Name="Email" />
                    <RadzenRequiredValidator Component="Email" Text="Email is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="4">
                    <RadzenLabel Text="Phone" Component="Phone" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="8">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@provider.Phone" Name="Phone" />
                    <RadzenRequiredValidator Component="Phone" Text="Phone is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="4">
                    <RadzenLabel Text="Address" Component="Address" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="8">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@provider.Address" Name="Address" />
                    <RadzenRequiredValidator Component="Address" Text="Address is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="4">
                    <RadzenLabel Text="City" Component="City" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="8">
                    <RadzenTextBox  Placeholder="Enter City" style="display: block; width: 100%" @bind-Value="@provider.City" Name="City"  />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="4">
                    <RadzenLabel Text="State" Component="State" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="8">
                    <RadzenTextBox  Placeholder="Enter State" style="display: block; width: 100%" @bind-Value="@provider.State" Name="State"  />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="4">
                    <RadzenLabel Text="Country" Component="Country" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="8">
                    <RadzenTextBox  Placeholder="Enter Country" style="display: block; width: 100%" @bind-Value="@provider.Country" Name="Country"  />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="4">
                    <RadzenLabel Text="Is Active" Component="IsActive" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="8">
                    <RadzenSwitch @bind-Value="@provider.IsActive" Name="IsActive" />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" IsBusy="@IsSaving" BusyText="Saving" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

