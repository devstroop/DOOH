@attribute [Authorize]
<RadzenRow class="rz-mb-4">
    <RadzenColumn SizeSM="12" SizeMD="6" SizeLG="8" class="rz-my-2">
        <RadzenRow AlignItems="AlignItems.Center">
            <RadzenColumn>
                <RadzenRow AlignItems="AlignItems.Center">
                    <RadzenColumn>
                        <RadzenTextBox Placeholder="Search City, State or Sign Name" @bind-Value=@search aria-label="Search by address" Style="display: block; width: 100%" />
                    </RadzenColumn>
                    <RadzenButton Icon="search" Text="Search" Click="@Search" />
                </RadzenRow>
            </RadzenColumn>
            <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Visible="@ShowSelectedAdboardLabel">
                <RadzenCheckBox @bind-Value=@showSelectedAdboardsOnly Name="CheckBoxAdboardOnly" />
                <RadzenLabel Text="Selected Only" Component="CheckBoxAdboardOnly" Style="font-size: 14px" />
            </RadzenStack>
        </RadzenRow>
    </RadzenColumn>
    <RadzenColumn SizeSM="12" SizeMD="6" SizeLG="4">
        <RadzenRow JustifyContent="JustifyContent.SpaceBetween" AlignItems="AlignItems.Center" Style="background-color: green; border-radius: 6px;" class="rz-px-2 rz-py-2 rz-mx-2" Gap="2rem" Visible="@ShowSelectedAdboardLabel">
            <RadzenRow AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Start" Gap="0.5rem">
                <RadzenIcon Icon="info" IconColor="white" />
                <RadzenText class="rz-mb-0" Text="@SelectedAdboardLabel" TextStyle="TextStyle.H6" Style="color: white; font-weight: 400;" />
            </RadzenRow>
            <RadzenButton Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Light" Shade="Shade.Lighter" Text="Clear" Click="@ClearSelectedAdboards" />
        </RadzenRow>
    </RadzenColumn>
</RadzenRow>
<RadzenRow>
    <RadzenColumn SizeSM="12" SizeMD="6" SizeLG="8">
        <RadzenRow>
            <RadzenGoogleMap ApiKey="@GlobalVariables.MapApiKey" @ref=map @bind-Zoom="@Zoom" Center="@CenterPosition" Style="width: 100%; height: 480px;" MapClick="@OnMapClick" MarkerClick="@OnMarkerClick" FitBoundsToMarkersOnUpdate="true" Options="@(new Dictionary<string, object> { { "disableDoubleClickZoom", true } })">
                <Markers>
                    @if (showSelectedAdboardsOnly && Data.Any())
                    {
                        @foreach (var each in Adboards.Where(x => Data.Any(y=> y.AdboardId == y.AdboardId)))
                        {
                            <RadzenGoogleMapMarker id="@($"map-marker-{each.AdboardId}")" Title="@($"{each.AdboardId}")" Position="@(new GoogleMapPosition() { Lat = each.Latitude, Lng = each.Longitude })" Style="" />
                        }
                    }
                    else
                    {
                        @foreach (var each in Adboards ?? new List<DOOH.Server.Models.DOOHDB.Adboard>())
                        {
                            <RadzenGoogleMapMarker id="@($"map-marker-{each.AdboardId}")" Title="@($"{each.AdboardId}")" Position="@(new GoogleMapPosition() { Lat = each.Latitude, Lng = each.Longitude })" Style="" />
                        }
                    }
                </Markers>
            </RadzenGoogleMap>
        </RadzenRow>
    </RadzenColumn>
    <RadzenColumn SizeSM="12" SizeMD="6" SizeLG="4">
        <RadzenRow>
            <RadzenColumn Size="12" Style="height: 480px; display: flex; flex-direction: column; overflow-y: auto; scroll-margin-top: 1rem">
                @if (adboardsCount == 0)
                {
                    <NoRecordsFound Title="Oops" Subtitle="No adboards found."></NoRecordsFound>
                } 
                <RadzenDataList @ref="@list0" TItem="DOOH.Server.Models.DOOHDB.Adboard" Data="@(showSelectedAdboardsOnly && Data.Any() ? Adboards.Where(x => Data.Any(x => x.AdboardId == x.AdboardId)) : Adboards)" WrapItems="true" LoadData="@adboardsLoadData" IsLoading="@isAdboardsLoading" Count="@adboardsCount" Style="min-height: 640px">
                    <Template>
                        <CampaignAdboardTemplate Context="@context" Selected="@Data.Any(x => x.AdboardId == context.AdboardId)" OnSelect="@OnSelectAdboard" OnUnselect="@OnUnselectAdboard"/>
                    </Template>
                    <LoadingTemplate>
                        <Loading Title="Loading" Subtitle="Adboards"></Loading>
                    </LoadingTemplate>
                </RadzenDataList>
            </RadzenColumn>
        </RadzenRow>
    </RadzenColumn>
</RadzenRow>