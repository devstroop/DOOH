@attribute [Authorize]
<RadzenRow class="rz-mb-4">
    <RadzenColumn SizeSM="12" SizeMD="6" SizeLG="8" class="rz-my-1">
        <RadzenRow AlignItems="AlignItems.Center">
            <RadzenColumn>
                <RadzenRow AlignItems="AlignItems.Center">
                    <RadzenColumn>
                        <RadzenTextBox Placeholder="Search City, State or Sign Name" @bind-Value=@search aria-label="Search by address" Style="display: block; width: 100%" />
                    </RadzenColumn>
                    <RadzenButton Icon="search" Click="@Search" />
                </RadzenRow>
            </RadzenColumn>
            <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Visible="@showSelectedAdboardLabel">
                <RadzenCheckBox @bind-Value=@showSelectedAdboardsOnly Name="CheckBoxAdboardOnly" />
                <RadzenLabel Text="Selected Only" Component="CheckBoxAdboardOnly" Style="font-size: 14px" />
            </RadzenStack>
        </RadzenRow>
    </RadzenColumn>
    <RadzenColumn SizeSM="12" SizeMD="6" SizeLG="4">
        <RadzenRow JustifyContent="JustifyContent.SpaceBetween" AlignItems="AlignItems.Center" Style="background-color: green; border-radius: 6px;" class="rz-px-3 rz-py-3 rz-mx-2" Gap="2rem" Visible="@showSelectedAdboardLabel">
            <RadzenRow AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Start" Gap="0.5rem">
                <RadzenIcon Icon="info" IconColor="white" />
                <RadzenText class="rz-mb-0" Text="@selectedAdboardLabel" TextStyle="TextStyle.H6" Style="color: white; font-weight: 400;" />
            </RadzenRow>
            <RadzenButton Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Light" Shade="Shade.Lighter" Text="Clear" Click="@ClearSelectedAdboards" />
        </RadzenRow>
    </RadzenColumn>
</RadzenRow>
<RadzenRow>
    <RadzenColumn SizeSM="12" SizeMD="6" SizeLG="8">
        <RadzenRow>
            <RadzenGoogleMap ApiKey="AIzaSyB2xbs8gsQDznVLM0diiR89jQ19t-JSabg" @ref=map @bind-Zoom="@Zoom" Center="@CenterPosition" Style="width: 100%; height: 640px;" MapClick="@OnMapClick" MarkerClick="@OnMarkerClick" FitBoundsToMarkersOnUpdate="true" Options="@(new Dictionary<string, object> { { "disableDoubleClickZoom", true } })">
                <Markers>
                    @if (showSelectedAdboardsOnly && selectedAdboardIds.Any())
                    {
                        @foreach (var each in adboards.Where(x => selectedAdboardIds.Contains(x.AdboardId)))
                        {
                            <RadzenGoogleMapMarker id="@($"map-marker-{each.AdboardId}")" Title="@($"{each.AdboardId}")" Position="@(new GoogleMapPosition() { Lat = each.Latitude, Lng = each.Longitude })" Style="" />
                        }
                    }
                    else
                    {
                        @foreach (var each in adboards ?? new List<DOOH.Server.Models.DOOHDB.Adboard>())
                        {
                            <RadzenGoogleMapMarker id="@($"map-marker-{each.AdboardId}")" Title="@($"{each.AdboardId}")" Position="@(new GoogleMapPosition() { Lat = each.Latitude, Lng = each.Longitude })" Style="" />
                        }
                    }
                </Markers>
            </RadzenGoogleMap>
        </RadzenRow>
    </RadzenColumn>
    <RadzenColumn SizeSM="12" SizeMD="6" SizeLG="4">
        <RadzenRow>
            <RadzenColumn Size="12" Style="height: 640px; display: flex; flex-direction: column; overflow-y: auto;">
                <RadzenDataList @ref="@list0" TItem="DOOH.Server.Models.DOOHDB.Adboard" Data="@(showSelectedAdboardsOnly && selectedAdboardIds.Any() ? adboards.Where(x => selectedAdboardIds.Contains(x.AdboardId)) : adboards)" LoadData="@adboardsLoadData" IsLoading="@isAdboardsLoading" Count="@adboardsCount">
                    <LoadingTemplate>
                        <RadzenStack Style="min-height: 300px;">
                            <LoadingComponent />
                        </RadzenStack>
                    </LoadingTemplate>
                    <Template>
                        <CampaignAdboardTemplate Context="@context" Selected="@selectedAdboardIds.Any(x => x == context.AdboardId)" OnSelect="@OnSelectAdboard" OnUnselect="@OnUnselectAdboard" />
                    </Template>
                </RadzenDataList>
            </RadzenColumn>
        </RadzenRow>
    </RadzenColumn>
</RadzenRow>