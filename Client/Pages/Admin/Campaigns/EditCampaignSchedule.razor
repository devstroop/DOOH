@inject DialogService DialogService

<RadzenTemplateForm TItem="DOOH.Server.Models.DOOHDB.CampaignSchedule" Data="@_schedule" Submit=@OnSubmit>
    <div class="row" style="margin-bottom: 16px">
        <div class="col-md-3">
            <RadzenLabel Text="Rotation" />
        </div>
        <div class="col">
            <RadzenNumeric @bind-Value="@_schedule.Rotation" Name="Rotation" />
            <RadzenRequiredValidator Text="Rotation is required" Component="Rotation" />
        </div>
    </div>
    <div class="row" style="margin-bottom: 16px">
        <div class="col-md-3">
            <RadzenLabel Text="Start" />
        </div>
        <div class="col">
            <RadzenDatePicker @bind-Value="@_schedule.Start" Name="Start" ShowTime="true" />
            <RadzenRequiredValidator Text="Start is required" Component="Start" />
        </div>
    </div>
    <div class="row" style="margin-bottom: 16px">
        <div class="col-md-3">
            <RadzenLabel Text="End" />
        </div>
        <div class="col">
            <RadzenDatePicker Name="End" @bind-Value="@_schedule.End" ShowTime="true" />
            <RadzenRequiredValidator Component="End" Text="End is required" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col">
            <RadzenButton ButtonType="ButtonType.Submit" Text="Save" />
        </div>
    </div>
</RadzenTemplateForm>
@code {
    [Parameter]
    public DOOH.Server.Models.DOOHDB.CampaignSchedule Schedule { get; set; }

    protected DOOH.Server.Models.DOOHDB.CampaignSchedule _schedule = new DOOH.Server.Models.DOOHDB.CampaignSchedule();

    protected override void OnParametersSet()
    {
        _schedule = Schedule;
    }

    void OnSubmit(DOOH.Server.Models.DOOHDB.CampaignSchedule schedule)
    {
        schedule.Label = $"{schedule.Rotation} rotations";
        DialogService.Close(schedule);
    }
}