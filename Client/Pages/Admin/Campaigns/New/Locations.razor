@attribute [Authorize]
<RadzenStack Orientation="Orientation.Horizontal" Style="width: 100%" class="rz-mb-4" JustifyContent="JustifyContent.SpaceBetween">
    <RadzenRow>
        <RadzenTextBox Placeholder="Search City, State or Sign Name" @bind-Value=@search aria-label="Search by address" Style="width: 300px" />
        <RadzenButton Icon="search" Click="@Search" />
    </RadzenRow>
    <RadzenRow JustifyContent="JustifyContent.End" Gap="0.5rem" AlignItems="AlignItems.Center" Visible="@showSelectedAdboardLabel">
        <RadzenCheckBox @bind-Value=@showSelectedAdboardsOnly Name="CheckBoxAdboardOnly" />
        <RadzenLabel Text="Show Selected Only" Component="CheckBoxAdboardOnly" Style="font-size: 14px" />
    </RadzenRow>
</RadzenStack>
<RadzenRow>
    <RadzenColumn SizeSM="12" SizeMD="6" SizeLG="8">
        <RadzenGoogleMap ApiKey="AIzaSyB2xbs8gsQDznVLM0diiR89jQ19t-JSabg" @ref=map @bind-Zoom="@Zoom" Center="@CenterPosition" Style="min-width: 100%; height: 600px;" MapClick="@OnMapClick" MarkerClick="@OnMarkerClick" FitBoundsToMarkersOnUpdate="true" Options="@(new Dictionary<string, object> { { "disableDoubleClickZoom", true } })">
            <Markers>
                @if (showSelectedAdboardsOnly && selectedAdboardIds.Any())
                {
                    @foreach (var each in adboards.Where(x => selectedAdboardIds.Contains(x.AdboardId)))
                    {
                        <RadzenGoogleMapMarker Title="@($"{each.AdboardId}")" Position="@(new GoogleMapPosition() { Lat = each.Latitude, Lng = each.Longitude })" />
                    }
                }
                else
                {
                    @foreach (var each in adboards ?? new List<DOOH.Server.Models.DOOHDB.Adboard>())
                    {
                        <RadzenGoogleMapMarker Title="@($"{each.AdboardId}")" Position="@(new GoogleMapPosition() { Lat = each.Latitude, Lng = each.Longitude })" />
                    }
                }
            </Markers>
        </RadzenGoogleMap>
    </RadzenColumn>
    <RadzenColumn SizeSM="12" SizeMD="6" SizeLG="4">
        <RadzenRow Visible="@showSelectedAdboardLabel">
            <RadzenColumn Size="12">
                <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.SpaceBetween" AlignItems="AlignItems.Center" Style="background-color: green; border-radius: 6px;" class="rz-px-3 rz-py-3 rz-mb-4" Gap="0.5rem">
                    <RadzenRow AlignItems="AlignItems.Center">
                        <RadzenIcon Icon="info" IconColor="white" />
                        <RadzenText class="rz-mb-0" Text="@selectedAdboardLabel" TextStyle="TextStyle.H6" Style="color: white; font-weight: 400;" />
                    </RadzenRow>
                    <RadzenButton Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Light" Shade="Shade.Lighter" Text="Clear" Click="@ClearSelectedAdboards" />
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow>
            @*Style="height: 600px; display: flex; flex-direction: column; overflow-y: auto;"*@
            <RadzenColumn Size="12" >
                <RadzenDataList @ref="@list0" TItem="DOOH.Server.Models.DOOHDB.Adboard" Data="@(showSelectedAdboardsOnly && selectedAdboardIds.Any() ? adboards.Where(x => selectedAdboardIds.Contains(x.AdboardId)) : adboards)" LoadData="@adboardsLoadData" IsLoading="@isAdboardsLoading" Count="@adboardsCount">
                    <Template>
                        <CampaignAdboardTemplate Context="@context" Selected="@selectedAdboardIds.Any(x => x == context.AdboardId)" OnSelect="@OnSelectAdboard" OnUnselect="@OnUnselectAdboard" />
                    </Template>
                </RadzenDataList>
            </RadzenColumn>
        </RadzenRow>
    </RadzenColumn>
</RadzenRow>