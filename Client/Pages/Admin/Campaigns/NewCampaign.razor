@layout AdminLayout
@page "/admin/campaigns/new"
@attribute [Authorize]
<PageTitle>New Campaign</PageTitle>
<RadzenRow class="rz-mb-1">
    <RadzenColumn Size="4">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
            <RadzenIcon Icon="campaign" Style="font-size: 28px" />
            <RadzenText Text="New Campaign" TextStyle="TextStyle.H4" TagName="TagName.H1" style="margin: 0" />
        </RadzenStack>
    </RadzenColumn>
    <RadzenColumn Size="8">
        <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" AlignItems="AlignItems.Center" Gap="0.5rem">
            <RadzenButton Icon="check" ButtonStyle="ButtonStyle.Success" Text="Save" Click="@FormSubmit" class="rz-px-3" />
            <RadzenButton Icon="close" ButtonStyle="ButtonStyle.Light" Text="Discard" Click="@CancelButtonClick" class="rz-px-3" />
        </RadzenStack>
    </RadzenColumn>
</RadzenRow>

<RadzenTabs @bind-SelectedIndex="@selectedTabIndex">
    <Tabs>
        <RadzenTabsItem Text="Basic Details">
            <RadzenColumn Size=12>
                <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Campaign</RadzenAlert>
                <RadzenTemplateForm TItem="DOOH.Server.Models.DOOHDB.Campaign" Data="@campaign" Visible="@(campaign != null)" Submit="@FormSubmit">
                    <RadzenRow style="margin-bottom: 1rem">
                        <RadzenColumn SizeMD="3">
                            <RadzenLabel Text="Campaign Name" Component="CampaignName" style="width: 100%" />
                        </RadzenColumn>
                        <RadzenColumn SizeMD="9">
                            <RadzenTextBox style="display: block; width: 100%" @bind-Value="@campaign.CampaignName" Name="CampaignName" />
                            <RadzenRequiredValidator Component="CampaignName" Text="CampaignName is required" />
                        </RadzenColumn>
                    </RadzenRow>
                    <RadzenRow style="margin-bottom: 1rem">
                        <RadzenColumn SizeMD="3">
                            <RadzenLabel Text="Budget Type" Component="BudgetType" style="width: 100%" />
                        </RadzenColumn>
                        <RadzenColumn SizeMD="9">
                            <RadzenTextBox style="display: block; width: 100%" @bind-Value="@campaign.BudgetType" Name="BudgetType" />
                        </RadzenColumn>
                    </RadzenRow>
                    <RadzenRow style="margin-bottom: 1rem">
                        <RadzenColumn SizeMD="3">
                            <RadzenLabel Text="Budget" Component="Budget" style="width: 100%" />
                        </RadzenColumn>
                        <RadzenColumn SizeMD="9">
                            <RadzenNumeric style="display: block; width: 100%" @bind-Value="@campaign.Budget" Name="Budget" />
                        </RadzenColumn>
                    </RadzenRow>
                    <RadzenRow style="margin-bottom: 1rem">
                        <RadzenColumn SizeMD="3">
                            <RadzenLabel Text="Draft" Component="IsDraft" style="width: 100%" />
                        </RadzenColumn>
                        <RadzenColumn SizeMD="9">
                            <RadzenCheckBox @bind-Value="@campaign.IsDraft" Name="IsDraft" />
                        </RadzenColumn>
                    </RadzenRow>
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                        <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                        <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick" />
                    </RadzenStack>
                </RadzenTemplateForm>
            </RadzenColumn>
        </RadzenTabsItem>
        <RadzenTabsItem Text="Adboards (Locations)">
            <RadzenRow >
                <RadzenColumn SizeMD="8" Size="12">
                    <RadzenGoogleMap ApiKey="AIzaSyB2xbs8gsQDznVLM0diiR89jQ19t-JSabg" @bind-Zoom="@Zoom" @bind-Center="@CenterPosition" Style="min-width: 100%; height: 768px;">
                        <Markers>
                            @foreach (var each in adboards ?? new List<DOOH.Server.Models.DOOHDB.Adboard>())
                            {
                                <RadzenGoogleMapMarker Title="@($"#{each.AdboardId}")" Position="@(new GoogleMapPosition() { Lat = each.Latitude ?? 0, Lng = each.Longitude ?? 0 })" />
                            }
                        </Markers>
                    </RadzenGoogleMap>
                </RadzenColumn>
                <RadzenColumn Style="min-width: 400px; height: 600px" SizeMD="4" Size="12">
                    <RadzenStack Orientation="Orientation.Horizontal" class="rz-mx-2 rz-mb-1" Style="width: 100%">
                        <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Stretch">
                            <RadzenTextBox Placeholder="Search ..." @bind-Value=@search aria-label="Search by address" Style="width:100%" />
                        </RadzenStack>
                        <RadzenButton Icon="search" Click="@Search" />
                    </RadzenStack>
                    <RadzenDataList @ref="@list0" TItem="DOOH.Server.Models.DOOHDB.Adboard" Data="@adboards" AllowPaging="true" LoadData="@adboardsLoadData" WrapItems="true" IsLoading="@isAdboardsLoading" Count="@adboardsCount" Style="height: 100%" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})>
                        <Template>
                            <AdboardTemplate Context="@context">
                            </AdboardTemplate>
                        </Template>
                    </RadzenDataList>
                </RadzenColumn>
            </RadzenRow>
        </RadzenTabsItem>
        <RadzenTabsItem Text="Schedule">
            <RadzenScheduler @ref=@scheduler SlotRender=@OnSlotRender style="height: 768px;" TItem="DOOH.Server.Models.DOOHDB.CampaignSchedule" Data=@campaignSchedules StartProperty="Start" EndProperty="End"
                             SelectedIndex="2"
                             SlotSelect=@OnSlotSelect AppointmentSelect=@OnScheduleSelect AppointmentRender=@OnScheduleRender
                             AppointmentMove=@OnScheduleMove>
                <RadzenDayView />
                <RadzenWeekView />
                <RadzenMonthView />
            </RadzenScheduler>
        </RadzenTabsItem>
        <RadzenTabsItem Text="Review">

        </RadzenTabsItem>
    </Tabs>
</RadzenTabs>

