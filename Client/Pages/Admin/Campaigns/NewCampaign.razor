@layout AdminLayout
@page "/admin/campaigns/new"
@attribute [Authorize]
<PageTitle>New Campaign</PageTitle>
<RadzenRow class="rz-mb-1">
    <RadzenColumn Size="4">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
            <RadzenIcon Icon="campaign" Style="font-size: 28px" />
            <RadzenText Text="New Campaign" TextStyle="TextStyle.H4" TagName="TagName.H1" style="margin: 0" />
        </RadzenStack>
    </RadzenColumn>
    <RadzenColumn Size="8">
        <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" AlignItems="AlignItems.Center" Gap="0.5rem">
            <RadzenButton Icon="check" ButtonStyle="ButtonStyle.Success" Text="Save" Click="@FormSubmit" class="rz-px-3" Visible="false" />
            <RadzenButton Icon="close" ButtonStyle="ButtonStyle.Light" Text="Discard" Click="@CancelButtonClick" class="rz-px-3" Visible="false" />
        </RadzenStack>
    </RadzenColumn>
</RadzenRow>

<RadzenTabs @bind-SelectedIndex="@selectedTabIndex">
    <Tabs>
        <RadzenTabsItem Text="Basic Details">
            <RadzenColumn Size=12>
                <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Campaign</RadzenAlert>
                <RadzenTemplateForm TItem="DOOH.Server.Models.DOOHDB.Campaign" Data="@campaign" Visible="@(campaign != null)" Submit="@FormSubmit">
                    <RadzenRow style="margin-bottom: 1rem">
                        <RadzenColumn SizeMD="3">
                            <RadzenLabel Text="Campaign Name" Component="CampaignName" style="width: 100%" />
                        </RadzenColumn>
                        <RadzenColumn SizeMD="9">
                            <RadzenTextBox style="display: block; width: 100%" @bind-Value="@campaign.CampaignName" Name="CampaignName" />
                            <RadzenRequiredValidator Component="CampaignName" Text="CampaignName is required" />
                        </RadzenColumn>
                    </RadzenRow>
                    <RadzenRow style="margin-bottom: 1rem">
                        <RadzenColumn SizeMD="3">
                            <RadzenLabel Text="Budget Type" Component="BudgetType" style="width: 100%" />
                        </RadzenColumn>
                        <RadzenColumn SizeMD="9">
                            <RadzenTextBox style="display: block; width: 100%" @bind-Value="@campaign.BudgetType" Name="BudgetType" />
                        </RadzenColumn>
                    </RadzenRow>
                    <RadzenRow style="margin-bottom: 1rem">
                        <RadzenColumn SizeMD="3">
                            <RadzenLabel Text="Budget" Component="Budget" style="width: 100%" />
                        </RadzenColumn>
                        <RadzenColumn SizeMD="9">
                            <RadzenNumeric style="display: block; width: 100%" @bind-Value="@campaign.Budget" Name="Budget" />
                        </RadzenColumn>
                    </RadzenRow>
                    <RadzenRow style="margin-bottom: 1rem">
                        <RadzenColumn SizeMD="3">
                            <RadzenLabel Text="Draft" Component="IsDraft" style="width: 100%" />
                        </RadzenColumn>
                        <RadzenColumn SizeMD="9">
                            <RadzenCheckBox @bind-Value="@campaign.IsDraft" Name="IsDraft" />
                        </RadzenColumn>
                    </RadzenRow>
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                        <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                        <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick" />
                    </RadzenStack>
                </RadzenTemplateForm>
            </RadzenColumn>
        </RadzenTabsItem>
        <RadzenTabsItem Text="Location" Icon="location_on">
            <RadzenStack Orientation="Orientation.Horizontal" Style="width: 100%" class="rz-mb-4" JustifyContent="JustifyContent.SpaceBetween">
                <RadzenRow>
                    <RadzenTextBox Placeholder="Search City, State or Sign Name" @bind-Value=@search aria-label="Search by address" Style="width: 300px" />
                    <RadzenButton Icon="search" Click="@Search" />
                </RadzenRow>
                <RadzenRow JustifyContent="JustifyContent.End" Gap="0.5rem" AlignItems="AlignItems.Center" Visible="@showSelectedAdboardLabel">
                    <RadzenCheckBox @bind-Value=@showSelectedAdboardsOnly Name="CheckBoxAdboardOnly" />
                    <RadzenLabel Text="Show Selected Only" Component="CheckBoxAdboardOnly" Style="font-size: 14px"/>
                </RadzenRow>
            </RadzenStack>
            <RadzenRow>
                <RadzenColumn SizeSM="12" SizeMD="6" SizeLG="8">
                    <RadzenGoogleMap ApiKey="AIzaSyB2xbs8gsQDznVLM0diiR89jQ19t-JSabg" @ref=map @bind-Zoom="@Zoom" Center="@CenterPosition" Style="min-width: 100%; height: 600px;" MapClick="@OnMapClick" MarkerClick="@OnMarkerClick" FitBoundsToMarkersOnUpdate="true" Options="@(new Dictionary<string, object> { { "disableDoubleClickZoom", true } })">
                        <Markers>
                            @if(showSelectedAdboardsOnly && selectedAdboardIds.Any())
                            {
                                @foreach (var each in adboards.Where(x => selectedAdboardIds.Contains(x.AdboardId)))
                                {
                                    <RadzenGoogleMapMarker Title="@($"{each.AdboardId}")" Position="@(new GoogleMapPosition() { Lat = each.Latitude, Lng = each.Longitude })" />
                                }
                            }
                            else
                            {
                                @foreach (var each in adboards ?? new List<DOOH.Server.Models.DOOHDB.Adboard>())
                                {
                                    <RadzenGoogleMapMarker Title="@($"{each.AdboardId}")" Position="@(new GoogleMapPosition() { Lat = each.Latitude, Lng = each.Longitude })" />
                                }   
                            }
                        </Markers>
                    </RadzenGoogleMap>
                </RadzenColumn>
                <RadzenColumn SizeSM="12" SizeMD="6" SizeLG="4">
                    <RadzenRow Visible="@showSelectedAdboardLabel">
                        <RadzenColumn Size="12">
                            <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.SpaceBetween" AlignItems="AlignItems.Center" Style="background-color: green; border-radius: 6px;" class="rz-px-3 rz-py-3 rz-mb-4" Gap="0.5rem">
                                <RadzenRow AlignItems="AlignItems.Center">
                                    <RadzenIcon Icon="info" IconColor="white" />
                                    <RadzenText class="rz-mb-0" Text="@selectedAdboardLabel" TextStyle="TextStyle.H6" Style="color: white; font-weight: 400;"/>
                                </RadzenRow>
                                <RadzenButton Size="ButtonSize.Small" ButtonStyle="ButtonStyle.Light" Shade="Shade.Lighter" Text="Clear" Click="@ClearSelectedAdboards" />
                            </RadzenStack>
                        </RadzenColumn>
                    </RadzenRow>

                    <RadzenRow>
                        <RadzenColumn Size="12">
                            <RadzenDataList @ref="@list0" TItem="DOOH.Server.Models.DOOHDB.Adboard" Data="@(showSelectedAdboardsOnly && selectedAdboardIds.Any() ? adboards.Where(x => selectedAdboardIds.Contains(x.AdboardId)) : adboards)" LoadData="@adboardsLoadData" IsLoading="@isAdboardsLoading" Count="@adboardsCount" Style="height: 600px">
                                <Template>
                                    <CampaignAdboardTemplate Context="@context" Selected="@selectedAdboardIds.Any(x => x == context.AdboardId)" OnSelect="@OnSelectAdboard" OnUnselect="@OnUnselectAdboard" />
                                </Template>
                            </RadzenDataList>
                        </RadzenColumn>
                    </RadzenRow>
                </RadzenColumn>
            </RadzenRow>
        </RadzenTabsItem>
        <RadzenTabsItem Text="Schedule">
            <RadzenScheduler @ref=@scheduler SlotRender=@OnSlotRender style="height: 768px;" TItem="DOOH.Server.Models.DOOHDB.CampaignSchedule" Data=@campaignSchedules StartProperty="Start" EndProperty="End"
                             SelectedIndex="2"
                             SlotSelect=@OnSlotSelect AppointmentSelect=@OnScheduleSelect AppointmentRender=@OnScheduleRender
                             AppointmentMove=@OnScheduleMove>
                <RadzenDayView />
                <RadzenWeekView />
                <RadzenMonthView />
            </RadzenScheduler>
        </RadzenTabsItem>
        <RadzenTabsItem Text="Review">

        </RadzenTabsItem>
    </Tabs>
</RadzenTabs>

