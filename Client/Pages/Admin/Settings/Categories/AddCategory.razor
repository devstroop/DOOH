@attribute [Authorize]
<PageTitle>Add Category</PageTitle>
<RadzenColumn SizeMD=12>
    <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Category</RadzenAlert>
    <RadzenTemplateForm TItem="DOOH.Server.Models.DOOHDB.Category" Data="@category" Visible="@(category != null)" Submit="@FormSubmit">
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Name" Component="CategoryName" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@category.CategoryName" Name="CategoryName" />
                <RadzenRequiredValidator Component="CategoryName" Text="Category Name is required" style="color: red" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Description" Component="CategoryDescription" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenTextArea style="display: block; width: 100%" @bind-Value="@category.CategoryDescription" Name="CategoryDescription" />
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Color" Component="CategoryColor" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                
                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">

                    <RadzenTextBox @bind-Value="@category.CategoryColor" Name="CategoryColor" Style="display: block; width: 100%"  />
                    <RadzenColorPicker @bind-Value="@category.CategoryColor" Name="CategoryColor"/>
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Commission (%)" Component="Commission" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenNumeric style="display: block; width: 100%" @bind-Value="@category.Commission" Name="Commission" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
            <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" IsBusy="@IsSaving" BusyText="Saving" />
            <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick" />
        </RadzenStack>
    </RadzenTemplateForm>
</RadzenColumn>

