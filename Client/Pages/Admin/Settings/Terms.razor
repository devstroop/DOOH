@layout AdminLayout
@page "/admin/settings/terms"

@attribute [Authorize]

<PageTitle>Terms</PageTitle>
<RadzenStack>
    <RadzenRow>
        <RadzenColumn Size="6">
            <RadzenText Text="Terms" TextStyle="TextStyle.H3" TagName="TagName.H1" />
        </RadzenColumn>
        <RadzenColumn Size="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Text="Save" Icon="save" Click="@SaveClick" ButtonStyle="ButtonStyle.Primary" Visible="@isEditing" />
                <RadzenButton Text="Cancel" Click="@CancelClick" ButtonStyle="ButtonStyle.Light" Visible="@isEditing" />
                <RadzenButton Text="Edit" Click="@EditClick" ButtonStyle="ButtonStyle.Light" Visible="!isEditing" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenHtmlEditor @bind-Value=@policy.Content style="min-height: 400px;" Visible="@(policy != null && isEditing)"></RadzenHtmlEditor>
    @if(policy != null && !isEditing)
    {
        @((MarkupString)policy.Content)
    }
</RadzenStack>