@layout AdminLayout
@page "/admin/settings/terms"

@attribute [Authorize]

<PageTitle>Terms</PageTitle>
<RadzenStack>
    <RadzenRow>
        <RadzenColumn Size="6">
            <RadzenBreadCrumb>
                <RadzenBreadCrumbItem Path="/admin" Icon="dashboard" />
                <RadzenBreadCrumbItem Path="/admin/settings" Text="Settings" />
                <RadzenBreadCrumbItem Path="/admin/settings/terms" Text="Terms" Icon="policy" />
            </RadzenBreadCrumb>
        </RadzenColumn>
        <RadzenColumn Size="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Text="Save" Icon="save" Click="@SaveClick" ButtonStyle="ButtonStyle.Success" Size="ButtonSize.Small" Visible="@isEditing" />
                <RadzenButton Text="Cancel" Click="@CancelClick" ButtonStyle="ButtonStyle.Light" Size="ButtonSize.Small" Visible="@isEditing" />
                <RadzenButton Text="Edit" Icon="edit" Click="@EditClick" ButtonStyle="ButtonStyle.Light" Size="ButtonSize.Small" Visible="!isEditing" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenHtmlEditor @bind-Value=@_page.Content style="min-height: 400px;" Visible="@(_page != null && isEditing)"></RadzenHtmlEditor>
    @if(_page != null && !isEditing)
    {
        @((MarkupString)_page.Content)
    }
</RadzenStack>