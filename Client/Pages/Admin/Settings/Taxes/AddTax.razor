@attribute [Authorize]
<PageTitle>Add Tax</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Tax</RadzenAlert>
        <RadzenTemplateForm TItem="DOOH.Server.Models.DOOHDB.Tax" Data="@tax" Visible="@(tax != null)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Tax Name" Component="TaxName" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tax.TaxName" Name="TaxName" />
                    <RadzenRequiredValidator Component="TaxName" Text="TaxName is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Tax Rate" Component="TaxRate" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tax.TaxRate" Name="TaxRate" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Tax1" Component="Tax1" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@taxesForParentTaxId" TextProperty="TaxName" ValueProperty="TaxId" AllowClear=true
                         Placeholder="Choose Tax1" style="display: block; width: 100%" @bind-Value="@tax.ParentTaxId" Name="ParentTaxId"
                        SelectedValue=@taxesForParentTaxIdValue Count=@taxesForParentTaxIdCount LoadData=@taxesForParentTaxIdLoadData />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

