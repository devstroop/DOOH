@layout AdminLayout
@page "/admin/settings/taxes"

@attribute [Authorize]
<PageTitle>Taxes</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Taxes" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
        <RadzenColumn SizeMD=12>
            <RadzenDataGrid @ref="grid0" ColumnWidth="200px" AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
                            Data="@taxes" LoadData="@Grid0LoadData" Count="@count" TItem="DOOH.Server.Models.DOOHDB.Tax" RowDoubleClick="@EditRow">
                <Columns>
                    <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Tax" Property="TaxId" Title="Tax Id">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Tax" Property="TaxName" Title="Tax Name">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Tax" Property="TaxRate" Title="Tax Rate">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Tax" Property="Tax1.TaxName" Title="Parent Tax">
                        <Template>
                            @context.Tax1.TaxName
                            @($"({context.Tax1.TaxRate}%)")
                        </Template>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="DOOH.Server.Models.DOOHDB.Tax" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                        <Template Context="tax">

                            <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                                          Shade="Shade.Lighter" Variant="Variant.Flat"
                                          Click=@(args => GridDeleteButtonClick(args, tax)) @onclick:stopPropagation="true" />
                        </Template>
                    </RadzenDataGridColumn>
                </Columns>

            </RadzenDataGrid>

        </RadzenColumn>
    </RadzenRow>
</RadzenStack>
