@layout AdminLayout
@page "/admin/settings"

@attribute [Authorize]

<PageTitle>Settings</PageTitle>
<RadzenStack>
    <RadzenRow>
        <RadzenColumn Size="12">
            <RadzenText Text="Settings" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
    </RadzenRow>
    
    <RadzenTabs @bind-SelectedIndex=@selectedIndex TabPosition="Radzen.TabPosition.Left">
        <Tabs>
            <RadzenTabsItem Text="Company" Icon="business">
                <Company />
            </RadzenTabsItem>
            <RadzenTabsItem Text="Taxes" Icon="percent">
                <DOOH.Client.Pages.Admin.Settings.Taxes.Taxes />
            </RadzenTabsItem>
            <RadzenTabsItem Text="Criteria" Icon="policy">
                <DOOH.Client.Pages.Admin.Settings.Criteria.Criteria />
            </RadzenTabsItem>
        </Tabs>
    </RadzenTabs>
</RadzenStack>
<style>
    .rz-tabview-left-icon .rzi {
        font-size: 14px;
    }
</style>