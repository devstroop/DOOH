<RadzenRow AlignItems="AlignItems.Start" @onclick="@((args) => OnClick.InvokeAsync(Context))" class="rz-border-radius-2 rz-p-3">
    <CarouselComponent Images="@Context.AdboardImages.Select(x => x.Image)" Style="object-fit: cover; min-width: 120px;" Height="150px" Width="150px" />
    <RadzenColumn> 
        <RadzenStack Gap="0" JustifyContent="JustifyContent.SpaceBetween" Style="height: 100%">
            <RadzenStack>
                <RadzenRow>
                    <RadzenColumn Size="12">
                        <RadzenStack Gap="0" AlignItems="AlignItems.Start">
                            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Start" Wrap="FlexWrap.Wrap" Gap="0.5rem" Style="" class="rz-mb-3">
                                <RadzenRow AlignItems="AlignItems.Center">
                                    <RadzenText Text="@($"{Context.AdboardId}")" class="rz-mb-0 rz-px-2 rz-py-1" Style="font-size: 12px; font-weight: 600; background-color: #dfdfdf; border-radius: 6px" />
                                    <RadzenText Text="@(String.IsNullOrEmpty(Context.SignName) ? "NA" : Context.SignName)" TextStyle="TextStyle.Subtitle1" class="rz-mb-0" />
                                </RadzenRow>
                                <RadzenBadge Text="@Context.Category.CategoryName.ToUpper()" Style="@($"{(String.IsNullOrEmpty(Context.Category.CategoryColor) ? "" : $"background-color:{Context.Category.CategoryColor}")}; border-radius: 4px; font-weight: 600;")" class="rz-pt-05 rz-px-15 rz-mb-0" />
                            </RadzenStack>
                            <RadzenText Text="@($"{Context.Address}")" TextStyle="TextStyle.Body2" class="rz-mb-0" />
                            <RadzenText Text="@($"{Context.City} {Context.State}")" TextStyle="TextStyle.Body2" class="rz-mb-0" />
                        </RadzenStack>
                    </RadzenColumn>
                </RadzenRow>

            </RadzenStack>
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween" Wrap="FlexWrap.Wrap">
                <RadzenStack Orientation="Orientation.Horizontal" Gap="0" JustifyContent="JustifyContent.Start" AlignItems="AlignItems.End">
                    <RadzenText Text="@($"â‚¹{(Context.BaseRatePerSecond ?? 0):F2}")" TextStyle="TextStyle.DisplayH6" class="rz-mb-0" Style="" />
                    <RadzenText Text="/sec" TextStyle="TextStyle.Body1" class="rz-mb-0" Style="font-weight:300; font-size: 12px" />
                </RadzenStack>
                <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" AlignItems="AlignItems.End" class="rz-mt-4">
                    <RadzenButton Text="Select" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Small" Visible="!Selected" Click="@SelectClick" />
                    <RadzenButton Text="Unselect" ButtonStyle="ButtonStyle.Danger" Variant="Variant.Outlined" Size="ButtonSize.Small" Visible="@Selected" Click="@UnselectClick" />
                </RadzenStack>
            </RadzenStack>
        </RadzenStack>
    </RadzenColumn>
</RadzenRow>
