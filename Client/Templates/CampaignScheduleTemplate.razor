@using DOOH.Server.Models.DOOHDB

<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.End" JustifyContent="JustifyContent.SpaceBetween" class="rz-shadow-3 rz-mt-3 campaign-schedule-card">
    <RadzenButton Icon="close" Size="ButtonSize.ExtraSmall" ButtonStyle="ButtonStyle.Danger" class="campaign-schedule-card-close" Click="@OnDelete"></RadzenButton>
    
    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
        @* <RadzenIcon Icon="date_range" IconStyle="IconStyle.Light" Style="font-size: 60px" class="rz-mr-3"></RadzenIcon> *@
        @* <RadzenStack Style="width: auto; height:  auto; display:  block; border-radius: 50%; overflow: hidden; background-color: #f8f9fa; border: 1px solid #e9ecef; padding: 0.5rem; margin-right: 1rem;"> *@
        @*     <RadzenText Text="@Context.ScheduleId.ToString()"></RadzenText> *@
        @* </RadzenStack> *@
        <RadzenStack Gap="0">
            <RadzenText Text="@Context.Start.ToString("ddd").ToUpper()" TextStyle="TextStyle.Caption" class="rz-mb-0 fw-semibold" Style="color:#5f5f5f"></RadzenText>
            <RadzenText Text="@Context.Start.ToString("dd")" TextStyle="TextStyle.DisplayH6" class="rz-mb-0 fw-semibold" Style="color: #2f2f2f"></RadzenText>
            <RadzenText Text="@Context.Start.ToString("MMM yyyy").ToUpper()" TextStyle="TextStyle.Caption" class="rz-mb-0" Style="font-size: 11px; color:#5f5f5f"></RadzenText>
        </RadzenStack>
        <RadzenStack>
            <RadzenIcon Icon="remove" class="fw-bold"></RadzenIcon>
        </RadzenStack>
        <RadzenStack Gap="0" class="rz-ml-1">
            <RadzenText Text="@Context.End.ToString("ddd").ToUpper()" TextStyle="TextStyle.Caption" class="rz-mb-0 fw-semibold"Style="color:#5f5f5f"></RadzenText>
            <RadzenText Text="@Context.End.ToString("dd")" TextStyle="TextStyle.DisplayH6" class="rz-mb-0 fw-semibold" Style="color: #2f2f2f"></RadzenText>
            <RadzenText Text="@Context.End.ToString("MMM yyyy").ToUpper()" TextStyle="TextStyle.Caption" class="rz-mb-0" Style="font-size: 11px; color:#5f5f5f"></RadzenText>
        </RadzenStack>
    </RadzenStack>
    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Start">
        <RadzenButton Shade="Shade.Lighter" Icon="remove" Size="ButtonSize.Medium" Click="@OnRemoveRotation"></RadzenButton>
        <RadzenStack Gap="0" AlignItems="AlignItems.Center">
            <RadzenText Text="@Context.Rotation.ToString()" TextStyle="TextStyle.DisplayH6" class="rz-mb-0"></RadzenText>
            <RadzenIcon Icon="360" Style="font-size: 24px"></RadzenIcon>
        </RadzenStack>
        <RadzenButton Icon="add" Shade="Shade.Lighter" Size="ButtonSize.Medium" Click="@OnAddRotation"></RadzenButton>
    </RadzenStack>
</RadzenStack>

<style>
    .campaign-schedule-card {
        position: relative;
        background-color: #f8f9fa;
        border: 1px solid #e9ecef;
        border-radius: 0.25rem;
        padding: 0.5rem;
    }

    .campaign-schedule-card-close {
        position: absolute;
        top: -6px;
        right: -6px;
        z-index: max(1, 1000);
        border-radius: 50%;
    }
</style>