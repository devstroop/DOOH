@using Blazored.Video
<RadzenStack AlignItems="AlignItems.Start" JustifyContent="JustifyContent.Start">
    <BlazoredVideo @ref="video"
                   CanPlay=@(s=>OnEvent(ref PausePlayText,s))
                   Ended=@(s=>OnEvent(ref PausePlayText,s))
                   Pause=@(s=>OnEvent(ref PausePlayText,s))
                   Play=@(s=>OnEvent(ref PausePlayText,s))
                   VideoEventOptions="options"
                   class="video-container"
                   autoplay="autoplay"
                   loop="loop">
        <source src="@Src" type="video/mp4" />
    </BlazoredVideo>
</RadzenStack>

<style>
    .video-container {
        max-width: 100%;
        max-height: 100%;
        cursor: pointer; /* To indicate the video is clickable */
        transform: rotate(270deg); /* Rotate the video 90 degrees */
        transform-origin: center center; /* Ensure the video rotates around its center */
    }
</style>
