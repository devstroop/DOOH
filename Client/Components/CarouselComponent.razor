@using Radzen
@using Microsoft.AspNetCore.Components

<div class="carousel-container" style="@(combinedStyle)">
    <RadzenImage Path="@currentImage" alt="Image" style="@imageStyle" Visible="!(String.IsNullOrEmpty(currentImage))" />
    <RadzenImage Path="/images/no-image.png" alt="Image" style="@imageStyle" Visible="@(String.IsNullOrEmpty(currentImage))" />

    <RadzenButton Size="ButtonSize.ExtraSmall" Variant="Variant.Filled" ButtonStyle="ButtonStyle.Light" Icon="chevron_left" class="nav-button left-button" Click="PreviousImage" Visible="@(currentIndex > 0)"/>
    <RadzenButton Size="ButtonSize.ExtraSmall" Variant="Variant.Filled" ButtonStyle="ButtonStyle.Light" Icon="chevron_right" class="nav-button right-button" Click="NextImage" Visible="@(Images.Count() - 1 > currentIndex)" />
</div>

<style>
    .carousel-container {
        position: relative;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;

    }

    .nav-button {
        position: absolute;
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        border: none;
        border-radius: 50%;
        padding: 10px;
        opacity: 50%;
    }

    .left-button {
        left: 10px;
        bottom: 0px;
        transform: translateY(-50%);
    }

    .right-button {
        right: 10px;
        bottom: 0px;
        transform: translateY(-50%);
    }

    .carousel-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: opacity 0.5s ease-in-out;
    }
</style>

@code {
    [Parameter]
    public IEnumerable<string> Images { get; set; }

    private string Height = "100%";

    private string Width = "100%";
    private string AspectRatio = "1:1";

    [Inject]
    protected Services.BrowserService BrowserService { get; set; }


    [Parameter]
    public string Style { get; set; } = "border-radius: 4px; border: 1px solid #dfdfdf;";

    [Parameter]
    public string Class { get; set; }

    private int currentIndex = 0;

    private string currentImage => Images.ElementAtOrDefault(currentIndex);

    private string combinedStyle => $"width: {Width}; height: {Height}; aspect-ratio: {AspectRatio}";
    private string imageStyle => $"width: 100%; height: 100%; {Style};";

    private void NextImage()
    {
        currentIndex = (currentIndex + 1) % Images.Count();
    }

    private void PreviousImage()
    {
        currentIndex = (currentIndex - 1 + Images.Count()) % Images.Count();
    }

    protected void OnViewportChanged(Services.WindowDimension dimension)
    {
        if (dimension.Width >= 1024)
        {
            Height = "100%";
            Width = "auto";
            AspectRatio = "16:9";
        }
        else
        {
            Width = "100%";
            Height = "auto";
            AspectRatio = "9:16";
        }
    }

    protected override Task OnInitializedAsync()
    {
        BrowserService.OnViewportChanged += OnViewportChanged;
        return base.OnInitializedAsync();
    }
}
