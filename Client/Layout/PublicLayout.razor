@inherits LayoutComponentBase
<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />
<RadzenLayout>
    <RadzenHeader>
        <RadzenRow JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Center" Gap="0" Class="rz-px-4" Style="height: 100%;">
            <RadzenColumn Size="6">
                <RadzenStack AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal" Gap="1rem">
                    <a href="/"><RadzenImage Path="images\LOGO-WHITE-GREEN.png" style="height: 24px"></RadzenImage></a>

                    @* <RadzenMenu>
                        <RadzenMenuItem Text="Home" Path="" />
                    </RadzenMenu> *@
                </RadzenStack>
            </RadzenColumn>
            <RadzenColumn Size="6">
                <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End">
                    @if (Security.IsAuthenticated())
                    {
                        <RadzenButton Text="Dashboard" Click="@DashboardClick" />
                        <RadzenProfileMenu Click="@ProfileMenuClick">
                            <ChildContent>
                                <RadzenProfileMenuItem Path="profile" Icon="settings" Text="Profile" />
                                <RadzenProfileMenuItem Text="Logout" Value="Logout" Icon="power_settings_new" />
                            </ChildContent>
                            <Template>
                                @Security.User?.Name
                                <RadzenGravatar Email="@Security.User?.Name" />
                            </Template>
                        </RadzenProfileMenu>
                    }
                    else
                    {
                        <RadzenButton Text="Login" Click="@((args) => NavigationManager.NavigateTo("/authentication/login"))" />
                    }
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenHeader>
    <RadzenBody>
        <RadzenRow Class="rz-mx-auto rz-px-4 rz-pt-2 rz-pt-md-4 rz-pt-lg-6 rz-pt-xl-12 rz-pb-2 rz-pb-lg-12" Style="max-width: 1440px;">
            <RadzenColumn Size="12">
            @Body
            </RadzenColumn>
        </RadzenRow>
    </RadzenBody>
    <RadzenFooter>
        <RadzenRow>
            <RadzenColumn SizeMD="6">
                <RadzenStack AlignItems="Radzen.AlignItems.Center" Orientation="Radzen.Orientation.Horizontal" JustifyContent="JustifyContent.Start">
                    <CulturePicker />
                </RadzenStack>
            </RadzenColumn>
            <RadzenColumn SizeMD="6">
                <RadzenStack AlignItems="Radzen.AlignItems.Center" Orientation="Radzen.Orientation.Horizontal" JustifyContent="JustifyContent.End">
                    <RadzenText Text="DOOH v1.0.0" class="rz-mb-0" TextStyle="Radzen.Blazor.TextStyle.Caption" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
                    <RadzenText Text="Copyright â’¸ 2024" class="rz-mb-0" TextStyle="Radzen.Blazor.TextStyle.Caption" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
        
        
    </RadzenFooter>
</RadzenLayout>
