@inherits LayoutComponentBase
<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<CascadingValue Value="@this">
    @* <LoadingComponent Visible="@ShowLoading" Style="width: 100%; height: 100%" /> *@
    <RadzenLayout style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body'">
        <RadzenHeader>
            <RadzenRow JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Center" Gap="0">
                <RadzenColumn Size="5">
                    <RadzenSidebarToggle Click="@SidebarToggleClick"></RadzenSidebarToggle>
                </RadzenColumn>
                <RadzenColumn Size="7">
                    <RadzenStack AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End">
                        <RadzenProfileMenu Visible="@Security.IsAuthenticated()" Click="@ProfileMenuClick" ShowIcon="false">
                            <ChildContent>
                                <RadzenProfileMenuItem Path="profile" Icon="settings" Text="Profile" />
                                <RadzenProfileMenuItem Text="Logout" Value="Logout" Icon="power_settings_new" />
                            </ChildContent>
                            <Template>
                                @* @Security.User?.Name *@
                                <RadzenGravatar Email="@Security.User?.Name" />
                            </Template>
                        </RadzenProfileMenu>
                    </RadzenStack>
                </RadzenColumn>
            </RadzenRow>
        </RadzenHeader>
        <RadzenBody Expanded="@sidebarExpanded">
            <RadzenRow class="rz-mx-auto rz-px-2 rz-pt-2 rz-pt-md-2 rz-pt-lg-2 rz-pt-xl-4 rz-pb-2 rz-pb-lg-12" Style="max-width: 1920px;">
                <RadzenColumn Size="12">
                    @Body
                </RadzenColumn>
            </RadzenRow>
        </RadzenBody>
        <RadzenSidebar Expanded="@sidebarExpanded" style="z-index: 2; width: 240px">
            <RadzenStack AlignItems="Radzen.AlignItems.Center" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding); border-bottom: var(--rz-panel-menu-item-border);">
                <a href="/">
                    <LazyImageComponent DefaultImageUrl="/vectors/Admin-Blue.svg" ImageUrl="@Company?.AdminLogo" Style="height: 40px;" />
                </a>
            </RadzenStack>
            <RadzenPanelMenu>
                <RadzenPanelMenuItem Text="Dashboard" Icon="dashboard" Path="/admin/dashboard" />
                <RadzenPanelMenuItem Text="Campaigns" Icon="campaign" Path="/admin/campaigns">
                    <RadzenPanelMenuItem Text="New" Icon="add" Path="/admin/campaigns/new" />
                </RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Adboards" Icon="tv" Path="/admin/adboards">
                    <RadzenPanelMenuItem Text="Motherboards" Path="/admin/adboards/motherboards" />
                    <RadzenPanelMenuItem Text="Displays" Path="/admin/adboards/displays" />
                </RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Pages" Icon="pages">
                    <RadzenPanelMenuItem Text="About" Path="/admin/pages/about" />
                    <RadzenPanelMenuItem Text="Contact" Path="/admin/pages/contact" />
                    <RadzenPanelMenuItem Text="Terms" Path="/admin/pages/terms" />
                    <RadzenPanelMenuItem Text="Privacy" Path="/admin/pages/privacy" />
                </RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="FAQs" Icon="quiz" Path="/admin/faqs" />
                <RadzenPanelMenuItem Text="Providers" Icon="group" Path="/admin/providers" />
                <RadzenPanelMenuItem Text="Users" Icon="people" Path="/admin/users">
                    <RadzenPanelMenuItem Text="Roles" Path="/admin/users/application-roles" />
                </RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Settings" Icon="settings" Path="/admin/settings">
                    <RadzenPanelMenuItem Text="Company" Icon="business" Path="/admin/settings/company" />
                    <RadzenPanelMenuItem Text="Brands" Icon="recommend" Path="/admin/settings/brands" />
                    <RadzenPanelMenuItem Text="Categories" Icon="category" Path="/admin/settings/categories" />
                    <RadzenPanelMenuItem Text="Statuses" Icon="flaky" Path="/admin/settings/statuses" />
                    <RadzenPanelMenuItem Text="Region" Icon="explore" Path="/admin/settings/region" />
                    <RadzenPanelMenuItem Text="Taxes" Icon="percent" Path="/admin/settings/taxes" />
                </RadzenPanelMenuItem>
            </RadzenPanelMenu>
            @* <RadzenStack AlignItems="AlignItems.Center">
                <CulturePicker></CulturePicker>
            </RadzenStack> *@
            <RadzenStack AlignItems="Radzen.AlignItems.Center" Gap="0" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding);">
                <RadzenText Text="DOOH v1.0.0" TextStyle="Radzen.Blazor.TextStyle.Caption" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
                <RadzenText Text="Copyright â’¸ 2024" TextStyle="Radzen.Blazor.TextStyle.Caption" class="rz-mb-0" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
            </RadzenStack>
        </RadzenSidebar>
    </RadzenLayout>
</CascadingValue>